<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CartActivity">
    <TextView
        android:id="@+id/no_cart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        android:visibility="gone"
        android:gravity="center"
        android:textStyle="bold"
        android:text="No Product Cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toobar_cart"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Cart"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleview_cart"
        app:layout_constraintTop_toBottomOf="@+id/toobar_cart"
        app:layout_constraintBottom_toBottomOf="@id/layout"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:id="@+id/layout"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="@id/btnBuy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="Total Money:"
            android:textSize="25dp"
            android:layout_margin="10dp"
            android:textColor="@color/color_text"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/total_money"
            android:text="100.000"
            android:textSize="25dp"
            android:layout_margin="10dp"
            android:gravity="right"
            android:textColor="@color/color_text"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <Button
        android:id="@+id/btnBuy"
        android:text="Order"
        android:backgroundTint="#339999"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>